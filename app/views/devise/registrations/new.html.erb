<div class="row">
  <div class="span6">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),html: {class: 'well form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <legend>Sign up</legend>
        <%= f.input :first_name, :autofocus => true %>
        <%= f.input :last_name %>
        <%= f.input :profile_name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <%= f.button :submit, "Sign up", class: 'btn btn-primary pull-right' %>
      </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="span6">
    <h2>Registering is easy and safer</h2>
  </div>
</div>